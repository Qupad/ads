<p id="notice"><%= notice %></p>

<h1>Profile </h1>

<%= link_to 'New advertise', new_article_path %>

<p>My articles: </p>

<div style="position: absolute; top: 0; right: 0 ">
	<span>Hi, <%= current_user.email %> </span>
  <%= link_to "Settings", edit_user_registration_path %>
  <p>
    <%= link_to 'Home', controller: 'articles' %>
  </p>
</div>

<table>
  <tr>
  	<th>Author</th>
    <th>Title</th>
    <th>Status</th>
    <th>Text</th>
    <th>Category</th>
    <th></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
    	<td><%= article.user.email %></td>
      <td><%= article.title %></td>
      <td><%= article.life_cycle %></td>
      <td><%= article.text %></td>
      <td><%= article.category.name %></td>
      <% if article.life_cycle == 'draft' || article.life_cycle == 'declined' || article.life_cycle == 'archived' %>
        <td><%= link_to 'Show', article_path(article) %></td>
        <td><%= link_to 'Update ', edit_article_path(article) %></td>
        <td><%= link_to 'Send ', send_to_approve_path(article), data: { confirm: 'Ur post will be send to moderation. Are u sure?' }  %></td>
        <td><%= link_to 'Delete', article_path(article), :method => :delete, data: { confirm: 'Are u sure?' } %></td>
      <% else %>
        <td><%= link_to 'Show', article_path(article) %></td>
        <td><%= link_to 'Delete', article_path(article), :method => :delete, data: { confirm: 'Are u sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>