<p id="notice"><%= notice %></p>

<h1><%= t 'static_pages.index.profile' %> </h1>

<%= link_to  (t 'static_pages.index.advertise_new'), new_article_path %>

<p><%= (t 'static_pages.index.advertise_my') + ':' %></p>

<div style="position: absolute; top: 0; right: 0 ">
	<span><%= (t 'static_pages.index.hi') + ', ' + (current_user.email) %> </span>
  <%= link_to  (t 'static_pages.index.settings'), edit_user_registration_path %>
  <p>
    <%= link_to (t 'static_pages.index.home'), controller: 'articles' %>
  </p>
</div>

<table>
  <tr>
    <th><%= t 'static_pages.index.title' %></th>
    <th><%= t 'static_pages.index.status' %></th>
    <th><%= t 'static_pages.index.text' %></th>
    <th><%= t 'static_pages.index.author' %></th>
    <th><%= t 'static_pages.index.type' %></th>
    <th colspan="3"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
    	<td><%= article.user.email %></td>
      <td><%= article.title %></td>
      <td><%= article.life_cycle %></td>
      <td><%= article.text %></td>
      <td><%= article.category.name %></td>
      <% if article.life_cycle == 'draft' || article.life_cycle == 'declined' || article.life_cycle == 'archived' %>
        <td><%= link_to (t 'static_pages.index.show'), article_path(article) %></td>
        <td><%= link_to (t 'static_pages.index.edit'), edit_article_path(article) %></td>
        <td><%= link_to (t 'static_pages.index.delete'), send_to_approve_path(article), data: { confirm: 'Ur post will be send to moderation. Are u sure?' }  %></td>
        <td><%= link_to (t 'static_pages.index.send'), article_path(article), :method => :delete, data: { confirm: 'Are u sure?' } %></td>
      <% else %>
        <td><%= link_to (t 'static_pages.index.show'), article_path(article) %></td>
        <td><%= link_to (t 'static_pages.index.delete'), article_path(article), :method => :delete, data: { confirm: 'Are u sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>