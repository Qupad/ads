<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<div style="position: absolute; top: 0; right: 0 ">
  <% if user_signed_in? %>
     <span>Hi, <%= link_to current_user.email, persons_profile_path %> </span>
     <%= link_to 'Log out', destroy_user_session_path, :method => :delete %>
  <% else %>
     <%= link_to 'Log in', new_user_session_path %> or <%= link_to 'Registration', new_user_registration_path %>
  <% end %>
</div>


<h1><%= link_to 'Advertise', articles_path %></h1>

<br>
<hr>
Types:<br>
<% Category.all.each do |cat|  %>
  <%= link_to cat.name, articles_path(category: cat.name) %>
<br>
<% end %>
<hr>
<br>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Text</th>
      <th>Author</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.life_cycle %></td>
        <td><%= article.text %></td>
        <td><%= article.user.email %></td>
        <td><%= article.category.name %></td>
        <td><%= link_to 'Show', article_path(article) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @articles %>

<%= link_to 'New advertise', new_article_path %>
